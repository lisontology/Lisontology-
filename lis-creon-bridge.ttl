@prefix : <https://raw.githubusercontent.com/aldogangemi/CreOn/refs/heads/main/creon.ttl> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix creon: <http://www.ontologydesignpatterns.org/ont/creativity/creon.owl#> .

# Ontologia ponte per allineamento Life is Strange - CREON (4P framework)
: a owl:Ontology ;
   rdfs:comment "Ontologia ponte per allineamento selettivo"@it ;
   rdfs:label "Lis-Creon Bridge"@en .

### CLASSI PRINCIPALI ###
creon:CreativeAgent a owl:Class ;
   rdfs:comment "Agente creativo (mappare a lis:Player)"@it ;
   rdfs:label "Creative Agent"@en .

creon:EnvironmentalConstraint a owl:Class ;
   rdfs:comment "Vincoli ambientali (mappare a lis:RewindMechanic)"@it ;
   rdfs:label "Environmental Constraint"@en .

creon:IncubationPhase a owl:Class ;
   rdfs:comment "Fase di incubazione creativa (mappare a lis:ReflectionState)"@it ;
   rdfs:label "Incubation Phase"@en .

creon:CreativeAct a owl:Class ;
   rdfs:comment "Atto creativo (mappare a scelte maggiori)"@it ;
   rdfs:label "Creative Act"@en .

creon:InterpretativeArtwork a owl:Class ;
   rdfs:comment "Prodotto interpretativo (mappare a significati interiorizzati)"@it ;
   rdfs:label "Interpretative Artwork"@en .

creon:CreativeTrait a owl:Class ;
   rdfs:comment "Tratto creativo (mappare a valori del giocatore)"@it ;
   rdfs:label "Creative Trait"@en .

### PROPRIETÀ DI COLLEGAMENTO ###
creon:hasTrait a owl:ObjectProperty ;
   rdfs:comment "Collega persona a tratti creativi"@it ;
   rdfs:label "has trait"@en .

creon:triggers a owl:ObjectProperty ;
   rdfs:comment "Per pressioni che attivano risposte"@it ;
   rdfs:label "triggers"@en .

creon:produces a owl:ObjectProperty ;
   rdfs:comment "Genera output creativi"@it ;
   rdfs:label "produces"@en .

### PROPRIETÀ DI ANNOTAZIONE ###
creon:paradoxType a owl:AnnotationProperty ;
   rdfs:comment "Per contraddizioni creative come il rewind"@it .

creon:emotionalEffect a owl:AnnotationProperty ;
   rdfs:comment "Effetti emotivi delle meccaniche"@it .